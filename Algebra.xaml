<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.Algebra"
             Title="Алгебра">
    <CollectionView ItemsSource="{Binding Formules}"
                 SelectionMode="Single"
                 BackgroundColor="{AppThemeBinding Light=#f2f2f2, Dark=#0a0a0a}"
                 SelectionChanged="CollectionView_SelectionChanged">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <Label Text="{Binding .}" FontSize="20" Margin="20,10,0,10" TextColor="{AppThemeBinding Dark=white, Light=black}"
                    />
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>